# Example env file for local testing (do NOT commit real secrets)
# Copy to .env and fill values before running locally

# Optional Neon (Postgres) provided by Netlify when you attach a Neon DB
NETLIFY_DATABASE_URL="postgresql://user:pass@host:5432/dbname"
# or unpooled variant
NETLIFY_DATABASE_URL_UNPOOLED="postgresql://user:pass@host:5432/dbname"

# Optional Upstash fallback (Redis REST)
UPSTASH_REDIS_REST_URL="https://<id>.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_token"

# Optional simple secret to protect POST increments
NETLIFY_COUNTER_SECRET="some-secret-value"
